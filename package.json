{
  "name": "@framelabs/pylon-client",
  "version": "0.1.0-beta.0",
  "description": "Pylon API Client",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "require": "./dist/cjs/index.cjs",
    "import": "./dist/index.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest.config.json --detectOpenHandles",
    "dev:run-file": "node --loader ts-node/esm",
    "build": "tsc",
    "build:commonjs": "tsc --module commonjs --target es2020 --declaration false --outdir dist/cjs && ./scripts/convert-to-cjs.sh",
    "watch": "tsc -w",
    "format": "prettier --write src test",
    "prepare": "npm run build && npm run build:commonjs",
    "prepublishOnly": "npm test"
  },
  "author": "Frame Labs, Inc.",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@framelabs/logger": "^1.0.0",
    "isomorphic-ws": "^5.0.0",
    "typed-emitter": "^2.1.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@framelabs/prettier-config": "*",
    "@tsconfig/node20": "^20.1.2",
    "@types/jest": "^29.5.4",
    "@types/ws": "8.5.3",
    "husky": "^8.0.3",
    "jest": "^29.6.3",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "prettier": "@framelabs/prettier-config",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frame-labs/pylon-client.git"
  },
  "bugs": {
    "url": "https://github.com/frame-labs/pylon-client/issues"
  },
  "homepage": "https://github.com/frame-labs/pylon-client#readme"
}
