{
  "name": "@framelabs/pylon-client",
  "version": "0.0.2",
  "description": "Pylon Client",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "npm run build && jest --env=node --detectOpenHandles",
    "build": "tsc",
    "watch": "tsc -w",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "author": "Frame Labs, Inc.",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@tsconfig/node16": "1.0.2",
    "@types/jest": "27.4.1",
    "@types/ws": "^8.5.3",
    "jest": "27.5.1",
    "ts-jest": "27.1.3",
    "typescript": "4.6.2"
  },
  "jest": {
    "testTimeout": 100,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "roots": [
      "test"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "16"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frame-labs/pylon-db.git"
  },
  "bugs": {
    "url": "https://github.com/frame-labs/pylon-db/issues"
  },
  "homepage": "https://github.com/frame-labs/pylon-db#readme",
  "dependencies": {
    "isomorphic-ws": "4.0.1",
    "ws": "8.5.0"
  }
}
