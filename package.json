{
  "name": "@framelabs/pylon-client",
  "version": "0.0.9",
  "description": "Pylon Client",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "npm run build && jest --env=node --detectOpenHandles",
    "build": "tsc",
    "watch": "tsc -w",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "author": "Frame Labs, Inc.",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/preset-env": "7.17.10",
    "@babel/preset-typescript": "7.16.7",
    "@tsconfig/node16": "1.0.2",
    "@types/jest": "27.5.0",
    "@types/ws": "8.5.3",
    "jest": "28.1.0",
    "ts-jest": "28.0.2",
    "typescript": "4.6.4"
  },
  "jest": {
    "testTimeout": 100,
    "clearMocks": true,
    "fakeTimers": {
      "enableGlobally": true,
      "legacyFakeTimers": true
    },
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "roots": [
      "test"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "16"
              }
            }
          ],
          "@babel/preset-typescript"
        ]
      }
    }
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frame-labs/pylon-client.git"
  },
  "bugs": {
    "url": "https://github.com/frame-labs/pylon-client/issues"
  },
  "homepage": "https://github.com/frame-labs/pylon-client#readme",
  "dependencies": {
    "isomorphic-ws": "4.0.1",
    "winston": "^3.8.2",
    "ws": "8.6.0"
  }
}
